{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "clean",
            "args": ["cleanup"]
        },
        {
            "taskName": "start",
            "isBackground": true,
            "args": ["start"]
        }
    ]
}